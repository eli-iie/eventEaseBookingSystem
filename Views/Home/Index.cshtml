@{
    ViewData["Title"] = "EventEase - Home";
}

<div class="text-center">
    <h1 class="display-4 text-primary">Welcome to EventEase</h1>
    <p class="lead">Your comprehensive venue booking management system</p>
      <div class="row mt-5">
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Manage Venues</h5>
                    <p class="card-text">Add, edit, and manage venue information with images.</p>
                    <a asp-controller="Venues" asp-action="Index" class="btn btn-primary">View Venues</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Manage Events</h5>
                    <p class="card-text">Create and organize events for your venues.</p>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-success">View Events</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-bookmark fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Manage Bookings</h5>
                    <p class="card-text">Track and manage venue bookings efficiently.</p>
                    <a asp-controller="Bookings" asp-action="Index" class="btn btn-warning">View Bookings</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Reports & Analytics</h5>
                    <p class="card-text">Comprehensive reporting and data analysis.</p>
                    <a asp-controller="Reports" asp-action="Index" class="btn btn-info">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>
