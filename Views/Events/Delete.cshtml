@model eventEaseBookingSystem.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Event</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this event?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">Event Name:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.EventName)</dd>
                    
                    <dt class="col-sm-3">Event Date:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.EventDate)</dd>
                    
                    <dt class="col-sm-3">Venue:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Venue.VenueName)</dd>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    }
                </dl>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="EventId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Event
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
