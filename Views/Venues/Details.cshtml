@model eventEaseBookingSystem.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h2 class="mb-0"><i class="fas fa-building"></i> Venue Details</h2>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="text-center mb-4">
                        <img src="@Model.ImageUrl" alt="@Model.VenueName" class="img-fluid rounded shadow" style="max-height: 300px;" />
                    </div>
                }
                
                <dl class="row">
                    <dt class="col-sm-3"><i class="fas fa-tag text-muted"></i> Name:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.VenueName)</dd>
                    
                    <dt class="col-sm-3"><i class="fas fa-map-marker-alt text-muted"></i> Location:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>
                    
                    <dt class="col-sm-3"><i class="fas fa-users text-muted"></i> Capacity:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacity) people</dd>
                </dl>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.VenueId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
