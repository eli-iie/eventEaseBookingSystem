<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventEase Booking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eventEaseBookingSystem.styles.css" asp-append-version="true" />
    <style>
        body { background: #f8f9fa; }
        .navbar-brand { font-weight: bold; letter-spacing: 1px; }
        .main-content { background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 2rem; margin-top: 2rem; }
        .footer { background: #343a40; color: #fff; padding: 1rem 0; position: sticky; bottom: 0; width: 100%; }
        .nav-link.active, .nav-link:focus, .nav-link:hover { color: #0056b3 !important; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">EventEase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Bookings/Calendar">Booking Calendar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Venues">Venues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Reports/BookingSummary">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Bookings">Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Events">Events</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-content">
        @RenderBody()
    </div>
    <footer class="footer mt-auto">
        <div class="container text-center">
            &copy; 2025 - EventEase Booking System
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
