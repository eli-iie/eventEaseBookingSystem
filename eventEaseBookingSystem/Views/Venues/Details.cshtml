@model eventEaseBookingSystem.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Venue Details</h2>
            </div>
            <div class="card-body">
                <dl class="row mb-4">
                    <dt class="col-sm-4">Venue Name</dt>
                    <dd class="col-sm-8">@Model.VenueName</dd>
                    <dt class="col-sm-4">Location</dt>
                    <dd class="col-sm-8">@Model.Location</dd>
                    <dt class="col-sm-4">Capacity</dt>
                    <dd class="col-sm-8">@Model.Capacity</dd>
                </dl>
                <div class="mb-4 text-center">
                    <label class="form-label">Image:</label><br />
                    @if (Model.ImageId != null)
                    {
                        <img src="/Venues/GetImage/@Model.ImageId" alt="Venue Image" class="img-fluid rounded shadow-sm" style="max-width: 350px; max-height: 250px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>