@model eventEaseBookingSystem.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">Delete Venue</h2>
            </div>
            <div class="card-body">
                <h4 class="text-danger">Are you sure you want to delete this venue?</h4>
                <dl class="row mb-4">
                    <dt class="col-sm-4">Venue Name</dt>
                    <dd class="col-sm-8">@Model.VenueName</dd>
                    <dt class="col-sm-4">Location</dt>
                    <dd class="col-sm-8">@Model.Location</dd>
                    <dt class="col-sm-4">Capacity</dt>
                    <dd class="col-sm-8">@Model.Capacity</dd>
                </dl>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="VenueId" />
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>