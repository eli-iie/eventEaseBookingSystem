@model IEnumerable<eventEaseBookingSystem.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Venues</h1>
    <a asp-action="Create" class="btn btn-success">+ Create New Venue</a>
</div>

<form asp-action="Search" method="get" class="mb-4">
    <div class="input-group input-group-lg">
        <input type="text" name="query" class="form-control" placeholder="Search venues by name or location" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover align-middle bg-white rounded shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Venue Name</th>
                <th>Location</th>
                <th>Capacity</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venue in Model)
            {
                <tr>
                    <td class="fw-semibold">@venue.VenueName</td>
                    <td>@venue.Location</td>
                    <td>@venue.Capacity</td>
                    <td>
                        @if (venue.ImageId != null)
                        {
                            <img src="/Venues/GetImage/@venue.ImageId" alt="Venue Image" class="img-thumbnail" style="max-width: 80px; max-height: 80px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>