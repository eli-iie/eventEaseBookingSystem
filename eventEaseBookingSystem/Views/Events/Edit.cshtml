@model eventEaseBookingSystem.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Edit Event</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="EventId" />
                    <div class="mb-3">
                        <label asp-for="EventName" class="form-label"></label>
                        <input asp-for="EventName" class="form-control" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EventDate" class="form-label"></label>
                        <input asp-for="EventDate" class="form-control" type="date" />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="VenueId" class="form-label">Venue</label>
                        <input asp-for="VenueId" class="form-control" placeholder="Enter Venue ID" />
                        <span asp-validation-for="VenueId" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
